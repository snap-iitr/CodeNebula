{
  "compilerOptions": {
    "target": "ES2020",              // Modern JavaScript target
    "module": "CommonJS",            // Node.js module system
    "rootDir": "src",                // Your source code folder
    "outDir": "dist",                // Compiled JS output
    "strict": true,                  // Enable all strict type-checking options
    "esModuleInterop": true,         // Enable import compatibility with CommonJS modules
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true             // Skip type checking of declaration files (optional, faster)
  },
  "include": ["src"]                 // Only compile files in src
}